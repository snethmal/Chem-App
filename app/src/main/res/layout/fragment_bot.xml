<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="53dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnLewis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:text="Lewis Structure Question" />

        <Button
            android:id="@+id/btnConversion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Conversion Question" />

        <Button
            android:id="@+id/btnEssay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Essay Question" />

        <Button
            android:id="@+id/btnIupac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="IUPAC Question" />



            <Button
                android:id="@+id/btnston"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Structure to Name"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:visibility="invisible"
                />

            <Button
                android:id="@+id/btnntos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name to Structure"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:visibility="invisible"
                />

    </LinearLayout>
</RelativeLayout>